<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestAll">

    <test name="final">
        <classes>
            <class name="TestNGG.TestSelenium" />
            <class name="TestNGG.TestGroup" />
        </classes>
    </test>

    <!-- Run test method on group "selenium" only -->
    <test name="selenium">

        <groups>
            <run>
                <include name="selenium-test" />
            </run>
        </groups>

        <classes>
            <class name="TestNGG.TestSelenium" />
            <class name="TestNGG.TestGroup" />
        </classes>

    </test>

</suite>